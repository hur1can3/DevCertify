<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>devcertify</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <Authors>Your Name/Organization</Authors>
    <Description>A cross-platform .NET CLI tool to create trusted local SSL certificates for localhost development using mkcert, with automated IIS integration on Windows.</Description>
    <PackageTags>ssl;certificate;localhost;https;mkcert;iis;dotnet-tool</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/hur1can3/devcertify</RepositoryUrl>
    <Version>1.0.0</Version>
  </PropertyGroup>

</Project>
